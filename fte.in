#!/bin/sh

if [ ! -f $HOME/.fterc ] ; then 
	# if this user has his/her own main.fte, use it.
	if [ -f $HOME/.fte/main.fte ]
        	@@BINDIR@@/cfte $HOME/.fte/main.fte $HOME/.fterc || exit 1
        # else, if the system has its own, use it.
        elif [ -f @@CONFIGDIR@@/../localconfig/main.fte ]
		@@BINDIR@@/cfte @@CONFIGDIR@@/../localconfig/main.fte $HOME/.fterc || exit 1
        # otherwise, use the default one.
        else
		@@BINDIR@@/cfte @@CONFIGDIR@@/main.fte $HOME/.fterc || exit 1
        fi
fi

exec @@BINDIR@@/xfte "$@"
